---
import { Icon } from 'astro-icon'
---

<fieldset class="relative text-[var(--secondary-color)] max-w-lg">
  <input
    id="postSearch"
    type="search"
    placeholder="Busca un Post"
    class="h-full w-full outline-none text-sm text-[var(--color-text)] pl-8 rounded-md min-h-[32px] bg-[var(--background-color-card)]"
  />
  <span class="absolute left-2 top-[calc(50%-15px)] w-[20px] flex items-center min-h-[32px]">
    <Icon name="ic:outline-search" width="20"/>
  </span>
</fieldset>
