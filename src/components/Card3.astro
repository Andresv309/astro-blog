---
import Autor from './Autor.astro';
import Button from './Button.astro';

interface Props{
  image: string;
  category: string;
  title: string;
  description: string;
}

const { image, category,title,description } = Astro.props
---

<div id="card" class="grid grid-cols-2 relative rounded-3xl bg-[var(--background-color-card)] gap-[0.5rem] md:gap-[1.5rem] overflow-hidden md:h-[350px] h-full" >

  <div id="contenedor_imagen" class="relative col-span-2 md:col-span-1 overflow-hidden">
    <img src={image} alt="" class="h-full w-full object-cover rounded-b-none md:rounded-3xl" >
    <div class="flex flex-row absolute bottom-0 right-0 pb-3.5 pr-1">
      <Autor  parametro1="Written by" parametro2="Andres Viancha"/>
      <Autor  parametro1="Written by" parametro2="Andres Viancha"/>
    </div>
  </div>

  <div class="flex flex-col font-bold p-5 gap-2 h-full col-span-2 md:col-span-1 md:py-5 md:pr-5">
    <a href="">
      <h6 class= "w-fit uppercase text-xs text-[var(--color-category-text)] font-semibold py-1 px-2 rounded-md bg-[var(--color-category-bg)] hover:bg-white/10 hover:text-white inline-block">{category}</h6>
    </a>
    <div class="line-clamp-2">
      <h3 class="text-[1.75rem] font-bold py-1 px-1">
        {title}
      </h3>
    </div>
    <div class="line-clamp-4">
    <!-- <div class="overflow-hidden h-24 "> -->
      <p class="font-light">
        {description}
      </p>
    </div>

    <div class= "flex text-[var(--color-category-text)] font-normal justify-center pt-10">
      <Button text="Leer mÃ¡s" style="secondary" href=""/>
    </div>
  </div>
</div>

<style>
