---
import Button from "./Button.astro";
import Link from "./Link.astro";
import SearchBar from "./SearchBar.astro";
const {} = Astro.props;
---

<nav class="flex justify-between items-center py-2">
  <h3 class="text-2xl font-bold pr-7 border-r-2 border-gray-400">
    All Posts
  </h3>

  <div class="flex gap-2">
    <Button
      text="Filtro"
      href="/"
      style="secondary"
      icon={{name:"ic:sharp-filter-alt", side:"left"}}
    />

    <SearchBar />
  </div>
</nav>