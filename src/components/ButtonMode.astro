<style>

  label {
  align-items: center;
  background: url('/darkMode.gif');
  box-shadow: 0 9px 28px rgba(0,0,0,0.30), 0 7px 8px rgba(0,0,0,0.22);
  background-position: center;
  background-size: cover;
  border-radius: 35px;
  cursor: pointer;
  display: flex;
  height: 40px;
  position: relative;
  width: 100px;
}

#toggle-button:checked + label {
  background: url('/lightMode.gif');
  background-position: bottom;
  background-size: cover;
}

label .sun-moon {
  background: radial-gradient( #77b2ff , transparent);
  border-radius: 50%;
  height: 30px;
  margin: 4px;
  transition: transform 0.3s ease;
  width: 30px;
}

#toggle-button:checked + label .sun-moon {
  background: radial-gradient(#fffeb3, transparent);
  transform: translateX(62px);
}
</style>

<script>
  const btnChangeThemeColor = document.querySelector("#toggle-button")
  btnChangeThemeColor.addEventListener("click", () => {
    document.body.classList.toggle("light-theme")
  })


</script>